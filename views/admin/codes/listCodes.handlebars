<div class="container-fluid col-md-9 ms-sm-auto col-lg-10 px-md-4">

  <div class="h2 mt-3">Codes</div>
  <hr class="border border-secondary opacity-50">
  <div id="toolbar">
    <a id="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#addCode">Add Code</a>
  </div>
  <div class="table-responsive">
    <table id="table" data-show-refresh="true" data-auto-refresh="true" data-toggle="table" data-search="true"
      data-toolbar="#toolbar" {{!-- data-show-custom-view="true" data-custom-view="customViewFormatter"
      data-show-custom-view-button="true" --}}data-id-field="id" data-url="/admin/codes/api/list">

      <thead>
        <tr>
          <th data-field="id" data-searchable="false">id</th>
          <th data-field="code">code</th>
          <th data-field="Coupon.percentage" data-formatter="percentageFormatter">percentage</th>
        </tr>
      </thead>
    </table>
  </div>

  <div class="modal fade" id="addCode" tabindex="-1" aria-labelledby="addCodeLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addCodeLabel">Add promotional code</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <form action="/admin/codes/addCode" method="post">
            <div class="row mb-3">
              <div class="col-lg-9 mx-auto">

                <div class="mb-3 mt-3 row">
                  <label for="codeName" class="col-sm-3 col-form-label">Code Name</label>
                  <div class="col-sm-9">
                    <input class="form-control" type="number" step="0.01" name="code" value="{{name}}" />
                  </div>
                </div>

                <div class="mb-3 mt-3 row">
                  <label for="percentage" class="col-sm-3 col-form-label">Percentage</label>
                  <div class="col-sm-9">
                    <input class="form-control" type="number" step="0.01" name="percentage" value="{{percentage}}" />
                  </div>
                </div>

              </div>
              <br>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit" value="Submit">Save changes</button>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
  function percentageFormatter(value, row) {
    return value + '%'
  }
</script>